<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
        backupGlobals = "false"
        backupStaticAttributes = "false"
        colors = "true"
        convertErrorsToExceptions = "true"
        convertNoticesToExceptions = "true"
        convertWarningsToExceptions = "true"
        processIsolation = "false"
        stopOnFailure = "false"
        syntaxCheck = "false"
        bootstrap = "./Tests/bootstrap.php" >

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>./Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Resources</directory>
                <directory>./Tests</directory>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"></listener>
        <listener class="\Omni\TestingBundle\Test\Listener\AddTestCaseExtensionsListener">
            <arguments>
                <array>
                    <element>
                        <string>\Omni\TestingBundle\TestCase\Extension\EntityExtension</string>
                    </element>
                    <element>
                        <string>\Omni\TestingBundle\TestCase\Extension\DatabaseExtension</string>
                    </element>
                    <element>
                        <string>\Omni\TestingBundle\TestCase\Extension\OmniOrmExtension</string>
                    </element>
                    <element>
                        <string>\Omni\TestingBundle\TestCase\Extension\FakerExtension</string>
                    </element>
                    <element>
                        <string>\Omni\TestingBundle\TestCase\Extension\UtilityExtension</string>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>

</phpunit>